<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fon"
    android:orientation="vertical" >
    
 <ScrollView
        android:id="@+id/scrolspina"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

    <Button
        android:id="@+id/chest"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/btn"
        android:text="@string/gryd"
        android:textColorLink="@color/btn"
        android:textSize="18sp" />

    <Button
        android:id="@+id/plechi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/btn"
        android:text="@string/plechi"
        android:textColorLink="@color/btn"
        android:textSize="18sp" />

    <Button
        android:id="@+id/spina"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/btn"
        android:text="@string/spina"
        android:textColorLink="@color/btn"
        android:textSize="18sp" />

    <Button
        android:id="@+id/nogi"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/btn"
        android:text="@string/nogi"
        android:textColorLink="@color/btn"
        android:textSize="18sp" />

    <Button
        android:id="@+id/pres"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/btn"
        android:text="@string/press"
        android:textColorLink="@color/btn"
        android:textSize="18sp" />

        <Button
        android:id="@+id/bic"
        style="?android:attr/buttonStyleSmall"
	    android:layout_width="250dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:layout_marginLeft="15dp"
	    android:layout_marginRight="15dp"
	    android:layout_marginTop="15dp"
	    android:background="@color/btn"
	     android:text="@string/bice"
        android:textSize="18sp" />
        
        <Button
            android:id="@+id/tric"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/btn"
            android:text="@string/trice"
            android:textSize="18sp" />
    
    </LinearLayout>
    </ScrollView>
</RelativeLayout>